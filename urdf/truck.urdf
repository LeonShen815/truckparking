<?xml version="1.0"?>
<robot name="visual">
    <link name="head">
        <visual>
            <geometry>
                <box size="2 1 1"/>
            </geometry>
        </visual>
    </link>

    <link name="tail">
        <visual>
            <geometry>
                <box size="4 1 1"/>
            </geometry>
            <origin xyz="-1.5 0 0"/>
        </visual>
    </link>

    <joint name="link" type="revolute">
        <parent link="head"/>
        <child link="tail"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="10"/>
        <origin xyz="-0.5 0 0"/>
    </joint>
</robot>
